{
  "name": "si-nsa-srp",
  "version": "1.0.0",
  "description": "SI-NSA SRP Data Collection App - Cross-platform application for Systematic Regional Program activities",
  "author": "SI-NSA",
  "license": "MIT",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/si-nsa-srp.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/si-nsa-srp/issues"
  },
  "keywords": [
    "bahai",
    "srp",
    "data-collection",
    "cross-platform",
    "capacitor",
    "electron",
    "react"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "lucide-react": "^0.263.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/android": "^5.5.1",
    "@capacitor/ios": "^5.5.1",
    "@capacitor/cli": "^5.5.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postbuild": "echo 'Build completed successfully'",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "electron-build": "npm run build && electron-builder",
    "electron-build:win": "npm run build && electron-builder --win",
    "electron-build:mac": "npm run build && electron-builder --mac",
    "electron-build:linux": "npm run build && electron-builder --linux",
    "cap:init": "npx cap init 'SI-NSA SRP' 'com.sinsa.srp' --web-dir=build",
    "cap:sync": "npm run build && npx cap sync",
    "cap:sync:android": "npm run build && npx cap sync android",
    "cap:sync:ios": "npm run build && npx cap sync ios",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:update": "npx cap update",
    "cap:copy": "npx cap copy",
    "android:build": "cd android && ./gradlew assembleRelease",
    "android:build:debug": "cd android && ./gradlew assembleDebug",
    "android:clean": "cd android && ./gradlew clean",
    "ios:build": "cd ios/App && xcodebuild -workspace App.xcworkspace -scheme App -configuration Release archive",
    "prebuild": "echo 'Starting build process...'",
    "lint": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.sinsa.srp",
    "productName": "SI-NSA SRP",
    "copyright": "Copyright Â© 2024 SI-NSA",
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "publisherName": "SI-NSA"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SI-NSA SRP"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}